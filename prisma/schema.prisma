// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id              String            @id
  createdAt       DateTime          @default(now())
  username        String            @unique
  password        String
  roles           UserRole[]
  characterSheets CharacterSheets[]
}

model Role {
  id        String     @id
  createdAt DateTime   @default(now())
  roleName  String
  roleLevel Int
  users     UserRole[]
}

model UserRole {
  id     String @id
  userId String
  roleId String
  user   User   @relation(fields: [userId], references: [id])
  role   Role   @relation(fields: [roleId], references: [id])

  @@index([userId])
  @@index([roleId])
}

model CharacterSheets {
  id           String                @id
  createdAt    DateTime              @default(now())
  userId       String
  user         User                  @relation(fields: [userId], references: [id])
  chName       String
  chAttributes CharacterAttributes[]

  @@index([userId])
}

model CharacterAttributes {
  id          String                    @id
  chSheetId   String
  chSheets    CharacterSheets           @relation(fields: [chSheetId], references: [id])
  chAttrNames CharacterAttributesName[]

  @@index([chSheetId])
}

model CharacterAttributesName {
  id         String              @id
  chAttrId   String
  attrNameId String
  chAttr     CharacterAttributes @relation(fields: [chAttrId], references: [id])
  attrNames  AttributesName      @relation(fields: [attrNameId], references: [id])

  @@index([chAttrId])
  @@index([attrNameId])
}

model AttributesName {
  id     String                    @id
  name   String
  chAttr CharacterAttributesName[]
  values AttributesValues[]
}

model AttributesValues {
  id        String         @id
  attNameId String
  attName   AttributesName @relation(fields: [attNameId], references: [id])
  value     String

  @@index([attNameId])
}
